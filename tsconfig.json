{
    "compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"outDir": "./build",
		"rootDir": "./src"
	},
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }